<div class="row rounded border perspective-result-container align-items-center">
    <div class="col-sm-6 h-100 d-table">
        <div class="results-title-container">
      <div><span class="title align-middle">Your Perspective</span></div>
      <div><span class="perspective-detail align-middle">Your Perspective Type is <%=@result%></span></div>
      </div>
    </div>
    
    <div class="col-sm-6">
      <div class = "row">
          <div class="col-sm-3 dimension-title results-margin">Introversion (I)</div>
          <div class="col-sm-6 results-margin">
              <div class="progress <%="bg-purple" if @result[0]=="E"%>">
                  <div class="progress-bar <%= @result[0]=="E" ? "bg-grey":"bg-purple" %>" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
          </div>
          <div class="col-sm-3 dimension-title results-margin">Extraversion (E)</div>
      </div>
      <div class = "row">
          <div class="col-sm-3 dimension-title results-margin">Sensing (S)</div>
          <div class="col-sm-6 results-margin">
              <div class="progress <%="bg-purple" if @result[1]=="N"%>">
                  <div class="progress-bar <%= @result[1]=="N" ? "bg-grey":"bg-purple" %>" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
          </div>
          <div class="col-sm-3 dimension-title results-margin">Intuition (N)</div>
      </div>
      <div class = "row">
          <div class="col-sm-3 dimension-title results-margin">Thinking (T)</div>
          <div class="col-sm-6 results-margin">
              <div class="progress <%="bg-purple" if @result[2]=="F"%>">
                  <div class="progress-bar <%= @result[2]=="F" ? "bg-grey":"bg-purple" %>" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
          </div>
          <div class="col-sm-3 dimension-title results-margin">Feeling (F)</div>
      </div>
      <div class = "row">
          <div class="col-sm-3 dimension-title results-margin">Judging (J)</div>
          <div class="col-sm-6 results-margin">
              <div class="progress <%="bg-purple" if @result[3]=="P"%>">
                  <div class="progress-bar <%= @result[3]=="P" ? "bg-grey":"bg-purple" %>" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
          </div>
          <div class="col-sm-3 dimension-title results-margin">Perceiving (P)</div>
      </div>
    </div>
  </div>